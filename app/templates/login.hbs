{{page-title "Login"}}
<div class="container">
    <div class="container-body d-flex justify-content-center align-items-center" style="height: 100vh;">
        <form class="login-form w-45 h-50" {{on "submit" this.authenticate}}>
            <h3 style="text-align: center;">Login</h3>
            <div class="form-group row mb-3" >
                <div class="col-4">
                    <label for="username">Username: </label>
                </div>
                <div class="col-8">
                    <Input class="form-control" @type="text" @value={{this.username}} />        
                </div>
            </div>
            <div class="form-group row mb-3">
                <div class="col-4">
                    <label for="password">Password: </label>
                </div>
                <div class="col-8">
                    <Input class="form-control" @type="password" @value={{this.password}} />
                </div>
            </div>
            <div class="d-flex justify-content-center">
                <button class="btn btn-primary w-50" type="submit">Login</button>
            </div>
            {{#if this.error}}
                <div class="alert alert-danger mt-3" role="alert">
                        {{this.error}}
                </div>
            {{/if}}
        </form>
    </div>
</div>
